<%# Signup page for users %>

<%- include("../partials/header") -%>
<%- include("../partials/publicNav") %>

<script>
    $(document).ready(() => {

        $("#flash").hide(0);

        $("#submit").click(() => {

            let email = $("#email").val();
            let password = $("#password").val();
            let confirmPassword = $("#confirmPassword").val();

            if(password != confirmPassword) {
                $("#flash").show(500);
                document.getElementById("flash").innerHTML = "Your passwords don't match!"; 
            } else {
                $.post("/signup", { email, password }, (response) => {
                    if(!response.success) {
                        $("#flash").show(500);
                        document.getElementById("flash").innerHTML = response.msg; 
                    } else {
                        $.post("/signin", { email, password }, () => {
                            location.reload();
                        });
                    }
                });
            }
        });
    });
</script>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center mb-3">
            <h1 class="mt-5">Sign Up to Librowser</h1>
            <p class="lead">Have an account already? <a href="/signin">Sign in</a></p>
        </div>
    </div>
</div>

<div class="container">
    <form action="/signup" method="post">
        <div class="form-floating mb-3">
            <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com">
            <label for="email">Email address</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" name="password" id="password" placeholder="Password">
            <label for="password">Password</label>
            <div id="passwordHelp" class="form-text">Your password must be at least 8 characters long</div>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password">
            <label for="confirmPassword">Confirm Password</label>
        </div>
        <button type="button" class="btn btn-primary mb-3" id="submit">Register</button>
    </form>

    <div class="alert alert-danger" role="alert" id="flash"></div>
</div>

<%- include("../partials/footer") -%>